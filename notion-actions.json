{
  "openapi": "3.1.0",
  "info": {
    "title": "FINOS Notion Actions API",
    "description": "OpenAPI 3.1 schema for FINOS Brand GPT: probes for eight Notion databases and integration check. Each probe limited to 1 row; Team & Governing Board restricted to Name + Role to prevent oversized responses.",
    "version": "1.0.4"
  },
  "servers": [
    {
      "url": "https://api.notion.com"
    }
  ],
  "paths": {
    "/v1/users/me": {
      "get": {
        "operationId": "getNotionMe",
        "summary": "Confirm FINOS Notion integration is active.",
        "parameters": [
          {
            "name": "Notion-Version",
            "in": "header",
            "required": true,
            "schema": { "type": "string", "example": "2022-06-28" }
          }
        ],
        "responses": {
          "200": { "description": "Integration is active" },
          "401": { "description": "Unauthorized â€” check token" }
        }
      }
    },
    "/v1/databases/25d739e9c06d80cb8e2febd04da0dfd0/query": {
      "post": {
        "operationId": "probeBrandBank",
        "summary": "Probe FINOS BrandBank database (limit to 1 row).",
        "parameters": [
          {
            "name": "Notion-Version",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "example": { "page_size": 1 }
            }
          }
        },
        "responses": { "200": { "description": "BrandBank DB reachable (1 row max)" } }
      }
    },
    "/v1/databases/240739e9c06d8135b554cff63c4dc7e9/query": {
