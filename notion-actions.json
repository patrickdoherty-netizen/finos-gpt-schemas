            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "page_size": {
                    "type": "integer",
                    "default": 1
                  },
                  "filter_properties": {
                    "type": "array",
                    "items": { "type": "string" }
                  }
                }
              },
              "example": {
                "page_size": 1,
                "filter_properties": ["Name", "Role"]
              }
            }
          }
        },
        "responses": { "200": { "description": "Team & Governing Board DB reachable (Name + Role only)" } }
